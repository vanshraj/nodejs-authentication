extends layout

block content
	h1 Register
	p Please register using the form below
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form( method='post', action='/users/register', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name',type='text',placeholder='Enter Name', value=( name ?name:'') )
		.form-group
			label Email
			input.form-control(name='email',type='email',placeholder='Enter Email', value=( email ?email:''))
		.form-group
			label Username
			input.form-control(name='username',type='text',placeholder='Enter Username', value=( username ?username:''))
		.form-group
			label Password
			input.form-control(name='password',type='password',placeholder='Enter Password', value=( password ?password:''))
		.form-group
			label Confirm Password
			input.form-control(name='password2',type='password',placeholder='Confirm Password', value=( password2 ?password2:''))
		.form-group
			label Profile Image
			input.form-control(name='profileimage',type='file')
		input.btn.btn-primary(name='submit',type='submit',value='Register')